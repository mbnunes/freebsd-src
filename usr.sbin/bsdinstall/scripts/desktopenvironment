############################################################ INCLUDES

BSDCFG_SHARE="/usr/share/bsdconfig"
. $BSDCFG_SHARE/common.subr || exit 1
f_dprintf "%s: loading_includes..." "$0"
f_include $BSDCFG_SHARE/dialog.subr
f_include $BSDCFG_SHARE/mustberoot.subr
f_include $BSDCFG_SHARE/packages/packages.subr

############################################################ CONFIGURATION

############################################################ GLOBALS

: ${BSDDIALOG_CANCEL=1}
: ${ASSUME_ALWAYS_YES=YES}

#
# Strings that should be moved to an i18n file and loaded with f_include_lang()
#
msg_freebsd_installer="$OSNAME Installer"
msg_ok="OK"
msg_please_choose_a_desktopenv="Please choose a desktop environment for this machine.\n"
msg_choose_desktopenv="Choose a desktop environment"

############################################################ FUNCTIONS

# dialog_desktopenv
#
# Display radio list
#
dialog_desktopenv()
{
        local prompt="$msg_please_choose_a_desktopenv"
        local hline=

        bsddialog \
                --title "$DIALOG_TITLE"         \
                --backtitle "$DIALOG_BACKTITLE" \
                --hline "$hline"                \
                --ok-label "$msg_ok"            \
                --radiolist "$prompt" 15 40 4   \
                "1" "KDE Plasma" off \
                "2" "XFCE" off \
                "3" "Gnome" off \
                2>&1 >&$DIALOG_TERMINAL_PASSTHRU_FD
}


############################################################ FUNCTIONS

pkg_basic()
{
    ASSUME_ALWAYS_YES=YES chroot $BSDINSTALL_CHROOT pkg install -y xorg
}

edit_rc()
{
    sysrc -R $BSDINSTALL_ROOT webcamd_enable="YES"
    sysrc -R $BSDINSTALL_ROOT moused_enable="YES"
    sysrc -R $BSDINSTALL_ROOT dbus_enable="YES"
    sysrc -R $BSDINSTALL_ROOT hald_enable="YES"
    sysrc -R $BSDINSTALL_ROOT sound_load="YES"
    sysrc -R $BSDINSTALL_ROOT snd_hda_load="YES"
}

edit_fstab()
{
    echo 'proc  /proc   procfs  rw  0   0' >> /etc/fstab
    mount -al
}

gnome_install()
{
    echo "Starting Gnome4 Installer"
    pkg_basic
    ASSUME_ALWAYS_YES=YES chroot $BSDINSTALL_CHROOT pkg install -y gnome gnome-desktop gdm
    edit_rc
    edit_fstab
    sysrc -R $BSDINSTALL_ROOT gnome_enable="YES"
    sysrc -R $BSDINSTALL_ROOT  gdm_enable="YES"
}

kde_install()
{
    echo "Starting Kde Plasma Installer"
    pkg_basic
    ASSUME_ALWAYS_YES=YES chroot $BSDINSTALL_CHROOT pkg install -y x11/kde5 x11/sddm
    edit_rc
    edit_fstab
    sysrc -R $BSDINSTALL_ROOT sddm_enable="YES"
}

xfce_install()
{
    echo "Starting Xfce Installer"
    pkg_basic
    ASSUME_ALWAYS_YES=YES chroot $BSDINSTALL_CHROOT pkg install -y xfce xfce4-goodies dbus lightdm lightdm-gtk-greeter 
    edit_rc
    edit_fstab
    sysrc -R $BSDINSTALL_ROOT lightdm_enable="YES"
}

############################################################ MAIN

#
# Initialize
#
f_dialog_title "$msg_choose_desktopenv"
f_dialog_backtitle "$msg_freebsd_installer"
f_mustberoot_init

#
# Get user input
#
CHOOSE=$( dialog_desktopenv )
[ $? -eq $BSDDIALOG_CANCEL ] && exit 1

case "$CHOOSE" in
	1)
		kde_install
		break
		;;
    2)
		xfce_install
		break
		;;
	3)
		gnome_install
		break
		;;
esac

################################################################################
# END
################################################################################
